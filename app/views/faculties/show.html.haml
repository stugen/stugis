- model_class = Faculty
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:id) + ':'
  %br
  = @faculty.id
%p
  %strong= model_class.human_attribute_name(:label) + ':'
  %br
  = @faculty.label


= link_to t('.back', :default => t("helpers.links.back")), faculties_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_faculty_path(@faculty), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), faculty_path(@faculty), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
