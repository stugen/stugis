= form_for @faculty, html: { class: "form form-horizontal faculty" } do |f|
  .form-group
    = f.label :id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :id, class: 'form-control', required: true
    = f.error_span(:id)
  .form-group
    = f.label :label, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :label, class: 'form-control', required: true
    = f.error_span(:label)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), faculties_path, :class => 'btn btn-default'
