= form_for @faculty, html: { class: "form form-horizontal faculty" } do |f|
  .faculty
    .card-body
      .form-row
        .form-group.col
          = f.submit t('helpers.titles.save', model: @faculty.label), class: 'form-control'
  .faculty
    .card-body
      .form-row
        .form-group.col
          = f.label :label
          = f.text_field :label, class: 'form-control', required: true
      .form-row
        .form-group.col
          = f.label :label_en
          = f.text_field :label_en, class: 'form-control', required: true
  .faculty
    .card-body
      .form-row
        .form-group.col
          = f.submit t('helpers.titles.save', model: @faculty.label), class: 'form-control'
